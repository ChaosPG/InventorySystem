@model InventorySystem.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_TextboxLayout.cshtml";
}

<form asp-action="Edit" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Product_ID" />
    <div class="col-md-4">
        <label asp-for="Product_Name" class="control-label"></label>
        <input asp-for="Product_Name" class="form-control" />
        <span asp-validation-for="Product_Name" class="text-danger"></span>
    </div>
    <div class="col-md-8">
        <label asp-for="Product_Description" class="control-label"></label>
        <input asp-for="Product_Description" class="form-control" />
        <span asp-validation-for="Product_Description" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Product_Unit" class="control-label"></label>
        <input asp-for="Product_Unit" class="form-control" />
        <span asp-validation-for="Product_Unit" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Product_Price" class="control-label"></label>
        <input asp-for="Product_Price" class="form-control" />
        <span asp-validation-for="Product_Price" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Product_Quantity" class="control-label"></label>
        <input asp-for="Product_Quantity" class="form-control" />
        <span asp-validation-for="Product_Quantity" class="text-danger"></span>
    </div>
    <div class="col-md-8">
        <label asp-for="Other_Details" class="control-label"></label>
        <input asp-for="Other_Details" class="form-control" />
        <span asp-validation-for="Other_Details" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Supplier_ID" class="control-label"></label>
        <select asp-for="Supplier_ID" class="form-control" asp-items="ViewBag.Supplier_ID"></select>
    </div>
    <div class="col-md-4">
        <label class="control-label">หมวดหมู่</label>
        <select asp-for="Category_ID" class="form-control" asp-items="ViewBag.Category_ID"></select>
    </div>
    <div class="col-md-12">
        <br />
        <input type="submit" value="บันทึก" class="btn btn-primary" />
        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Products")'">
            กลับสู่หน้าหลัก
        </button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

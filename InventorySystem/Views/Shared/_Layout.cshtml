<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventorySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/7b837f95cc.js" crossorigin="anonymous"></script>
    <link href="~/lib/bootstrap/dist/css/InventoryStyle.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="shadow-sm navbar navbar-expand-md navbar-light bg-white fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="~/Home/Index">
                    <img src="~/lib/bootstrap/dist/images/Inventory-Logo.png" />
                    @*<h5 class="navbar-web-name">INVENTORY SYSTEM</h5>*@
                </a>
                <partial name="_LoginPartial.cshtml" />
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <div class="footer">
        <p class="mt-1">&copy; 2021 - InventorySystem Alright Reserved.</p>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


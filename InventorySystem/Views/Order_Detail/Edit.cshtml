@model InventorySystem.Models.Order_Detail

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_TextboxLayout.cshtml";
}

<form asp-action="Edit" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Order_Detail_ID" />
    <div class="col-md-4">
        <label asp-for="Unit_Price" class="control-label"></label>
        <input asp-for="Unit_Price" class="form-control" />
        <span asp-validation-for="Unit_Price" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Size" class="control-label"></label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Discount" class="control-label"></label>
        <input asp-for="Discount" class="form-control" />
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Total" class="control-label"></label>
        <input asp-for="Total" class="form-control" />
        <span asp-validation-for="Total" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Order_Detail_Date" class="control-label"></label>
        <input asp-for="Order_Detail_Date" class="form-control" />
        <span asp-validation-for="Order_Detail_Date" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Product_ID" class="control-label"></label>
        <select asp-for="Product_ID" class="form-control" asp-items="ViewBag.Product_ID"></select>
    </div>
    <div class="col-md-4">
        <label asp-for="Order_ID" class="control-label"></label>
       <select asp-for="Order_ID" class="form-control" asp-items="ViewBag.Order_ID"></select>
    </div>
    <div class="col-md-4">
        <label asp-for="Bill_Number" class="control-label"></label>
        <select asp-for="Bill_Number" class="form-control" asp-items="ViewBag.Bill_Number"></select>
    </div>
    <div class="col-md-6">
        <br />
        <input type="submit" value="บันทึก" class="btn btn-primary" />
        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Order_Detail")'">
            กลับสู่หน้าหลัก
        </button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

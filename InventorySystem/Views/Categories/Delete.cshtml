@model InventorySystem.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_TextboxLayout.cshtml";
}

<h3>ต้องการลบข้อมูลนี้หรือไม่?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category_Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category_Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Category_ID" />
        <input type="submit" value="ลบข้อมูล" class="btn btn-danger" />
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Categories")'">
            กลับสู่หน้าหลัก
        </button>
    </form>
</div>
